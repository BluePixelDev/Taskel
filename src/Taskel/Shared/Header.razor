<div class="header">
    <a class="logo" href="/"></a>
    <div class="navigation">

        <a href="/">
            Home
        </a>

        <div class="dropdown">
            <button class="dropbtn">Categories</button>
            <div class="dropdown-content">

                <div class="dropdown-item">
                    <img class="dropdown-item-icon" src="/Images/Icons/Category/Texture_Icon.png" />
                    <a href="/category/art">Art</a>
                </div>

                <div class="dropdown-item">
                    <img class="dropdown-item-icon" src="/Images/Icons/Category/Music_Icon.png" />
                    <a href="/category/music">Music</a>
                </div>

                <div class="dropdown-item">
                    <img class="dropdown-item-icon" src="/Images/Icons/Category/Sound_Icon.png" />
                    <a href="/category/sound">Sound</a>
                </div>

                <div class="dropdown-item">
                    <img class="dropdown-item-icon" src="/Images/Icons/Category/Model_Icon.png" />
                    <a href="/category/models">Models</a>
                </div>
            </div>
        </div>

        <a href="/explore">
            Explore
        </a>

        @if (!isLoggedIn)
        {
            <a href="/signup" class="header-register">
                Sign Up
            </a>
        }
        else
        {
            <a href="/user" class="header-register">
                Dashboard
            </a>
            <button class="header-logout" @onclick=Logout>
                Log out
            </button>

            <p class="header-credits">
                @userCredits K
            </p>
        }
    </div>

    <div class="mobile-navigation @GetMenuClass()">
        <a href="/" @onclick=ToggleMenu>
            Home
        </a>

        @if (!isLoggedIn)
        {

            <a href="/signup" class="header-register" @onclick=ToggleMenu>
                Sign Up
            </a>
        }
        else
        {
            <a href="/user" class="header-register" @onclick=ToggleMenu>
                Dashboard
            </a>
        }
    </div>

    <button class="hamburger @GetMenuClass()" @onclick="ToggleMenu">
        <span></span>
        <span></span>
        <span></span>
    </button>
</div>

<div class="header-space"></div>

@code {
    private bool isMenuShown;
    private bool isLoggedIn;
    private int userCredits = 0;

    protected override void OnInitialized()
    {

    }

    private void Logout()
    {

    }

    private void ToggleMenu()
    {
        isMenuShown = !isMenuShown;
    }

    private string GetMenuClass()
    {
        return isMenuShown ? "menu-shown" : "";
    }
}