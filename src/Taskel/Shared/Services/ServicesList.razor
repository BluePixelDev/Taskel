@using TaskelDB.Models.Service;

<div class="services-wrapper">
    @if(OnCreate != null)
    {
        <CreateCard OnClick="CardClick"></CreateCard>
    }

    @foreach (ServiceModel serviceModel in Services)
    {
        <ServiceCard ServiceModel=serviceModel />
    }
</div>

@code {
    [Parameter] public ServiceModel[] Services { get; set; } = [];
    [Parameter] public Action? OnCreate { get; set; } = null;

    private void CardClick()
    {
        OnCreate?.Invoke();
    }
}
